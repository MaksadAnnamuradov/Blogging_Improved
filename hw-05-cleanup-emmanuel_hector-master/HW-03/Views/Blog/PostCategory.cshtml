@model PostCatRel
@{
    ViewData["Title"] = "PostCategory";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>

    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr><th>Title</th> <th>PostedOn</th> <th>EditedOn</th></tr>
        </thead>
        <tbody>
            <p>@Model.category.CategoryId</p>
            <p>@Model.category.CategoryName</p>
            @foreach (HW_03.Models.Post post in Model.posts)
            {
                foreach (HW_03.Models.PostCategory postcategory in post.PostCategories)
                {
                    <p>@postcategory.CategoryId</p>

                    if (postcategory.CategoryId == Model.category.CategoryId)
                    {
                        <tr>

                            <td> <a asp-route-ID="@post.ID" asp-action="Detail">@post.Title</a></td>
                            <td>@post.PostedOn</td>
                            <td>@post.EditedOn</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

    <a asp-action="NewPost">NewPost</a>

</body>

</html>
